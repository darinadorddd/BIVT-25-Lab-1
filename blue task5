namespace лаб._работа_1
{
    public class Blue5
    {
        public double Task5(double x)
        {
            double ans = 0;

            // code here
            if (x <= -1)
            {
                ans = 0;
            }
            else if (x > -1 && x <= 0)
            {
                ans = x + 1;
            }
            else if (x > 0)
            {
                ans = 1;
            }
            // end

            return ans;
        }
    }
}
